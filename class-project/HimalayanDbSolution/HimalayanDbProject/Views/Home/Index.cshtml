@model IEnumerable<HimalayanDbProject.Models.Expedition>
@{
    ViewData["Title"] = "Himalayan Expeditions";
}

<div class="row">
    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item" data-interval="3000">
                <img src="~/images/Mount_Everest_as_seen_from_Drukair2_PLW_edit.jpg" class="d-block w-100" alt="Mount Everst as seen from Drukair2">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Mount Everst as seen from Drukair2</h5>
                </div>
            </div>
            <div class="carousel-item active" data-interval="3000">
                <img src="~/images/Ama_Dablam_from_Kala_Patthar.jpg" class="d-block w-100" alt="Ama Dablam as seen from Kala Patthar">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Ama Dablam as seen from Kala Patthar</h5>
                </div>
            </div>
            <div class="carousel-item" data-interval="3000">
                <img src="~/images/mount-shivling-and-meru.jpg" class="d-block w-100" alt="Mount Shivling">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Mount Shivling and Meru</h5>>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>


<div class="row">
    <div class="col-8" style="background:#74a6ff">
        <br />
        <h2 class="text-center">Recent Expeditions</h2>
        <p class="text-center" id="stats"></p>
        <table class="table table-dark table-striped table-sm" style="margin: 0 auto; font-size: 14px">
            <thead>
                <tr>
                    <th scope="col">Start Date</th>
                    <th scope="col">Peak</th>
                    <th scope="col">Height</th>
                    <th scope="col">Trekking Agency</th>
                    <th scope="col">Termination Reason</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var e in Model)
                {
    <tr>
        <td scope="col">@e.StartDate</td>
        <td scope="col">@e.Peak.Name</td>
        <td scope="col">@e.Peak.Height</td>
        <td scope="col">@e.TrekkingAgency.Name</td>
        <td scope="col">@e.TerminationReason</td>
    </tr>}
            </tbody>
        </table><br />
    </div>
    <div class="col-4" style="background:#1f4075; font-size: 18px; padding: 0px 40px" >
        <br /><br />
        <div class="alert alert-light" role="alert" style="text-align:center">
            <a class="alert-link" asp-controller="BlogPosts" asp-action="Index">View Blog</a>
        </div>
        <div class="alert alert-light" role="alert" style="text-align:center">
            <a asp-controller="Home" asp-action="Submit" class="alert-link">Submit an Expedition</a>
        </div>
        <div class="alert alert-light" role="alert" style="text-align:center">
            <a asp-controller="Home" asp-action="Peaks" class="alert-link">Explore Peaks</a>
        </div>
    </div>
</div>

