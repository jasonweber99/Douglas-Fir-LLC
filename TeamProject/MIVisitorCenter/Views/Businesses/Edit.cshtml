@model MIVisitorCenter.Business

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="uk-form-horizontal uk-margin-large uk-align-center" style="width: 80%; padding-top: 2rem;">Edit Business</h2>
<hr class="uk-align-center" style="width: 80%;"/>
<form class="uk-form-horizontal uk-margin-large uk-align-center" style="width: 80%;" asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="PictureFileName" />

    <div class="uk-margin">
        <label class="uk-form-label" asp-for="Name"></label>
        <div class="uk-form-controls">
            <input class="uk-input" id="form-horizontal-text" type="text" asp-for="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="uk-margin">
        <label class="uk-form-label" asp-for="Description"></label>
        <div class="uk-form-controls">
            @* <input class="uk-input" id="form-horizontal-text" type="text" asp-for="Description"> *@
            <textarea class="uk-textarea" style="resize: none;" rows="4" id="form-horizontal-text" type="text" asp-for="Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="uk-margin">
        <label class="uk-form-label" asp-for="Phone"></label>
        <div class="uk-form-controls">
            <input class="uk-input" id="form-horizontal-text" type="tel" asp-for="Phone">
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
    </div>

    <div class="uk-margin">
        <label class="uk-form-label" asp-for="Website"></label>
        <div class="uk-form-controls">
            <input class="uk-input" id="form-horizontal-text" type="text" asp-for="Website">
            <span asp-validation-for="Website" class="text-danger"></span>
        </div>
    </div>

    <div class="uk-margin">
        <label class="uk-form-label" asp-for="PictureFileName">Business Profile Picture</label>
        <div class="uk-form-controls">
            <div uk-form-custom="target: true" class="uk-align-center">
                <input class="uk-input" id="form-horizontal-text" type="file" asp-for="PictureFileName" placeholder="Select file">
                <input class="uk-input" id="form-horizontal-text" type="text" placeholder="Upload profile picture">
                <small class="uk-text-light">Note that any uploaded profile picture will automatically be added to your business' gallery. If you would like to not include it, just remove it from the gallery below.</small>
                <span asp-validation-for="PictureFileName" class="text-danger"></span>
            </div>
        </div>
    </div>
    
    <div class="form-group" style="display:none">
        <label asp-for="AddressId" class="control-label"></label>
        <select asp-for="AddressId" class="form-control" asp-items="ViewBag.AddressId"></select>
        <span asp-validation-for="AddressId" class="text-danger"></span>
    </div>

    <div class="uk-margin">
        <label class="uk-form-label" asp-for="PhotoCollections">Gallery Picture</label>
        <div class="uk-form-controls">
            <div uk-form-custom="target: true" class="uk-align-center">
                <input class="uk-input" id="form-horizontal-text" type="file" asp-for="PhotoCollections" placeholder="Select images" multiple>
                <input class="uk-input" id="form-horizontal-text" type="text" placeholder="Upload images">
                <span asp-validation-for="PhotoCollections" class="text-danger"></span>
            </div>
        </div>
    </div>


    @if (Model.PhotoCollections.Count != 0)
    {
        <div style="padding: 3rem 0 1rem 0;">
            <h2 style="align-self: center;">Uploaded Images</h2>
            <hr class="uk-align-center"/>
        </div>

        <div class="uk-position-relative uk-visible-toggle uk-light uk-text-center" tabindex="-1" uk-slider>

        <ul class="uk-slider-items uk-child-width-1-1 uk-child-width-1-3@s uk-child-width-1-3@m">
            @foreach (var a in ViewData["Photos"] as IList<PhotoCollection>)
            {
                <li>
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(a.Photo)" alt="" style="padding: 0.75rem; border-radius: 20px;">
                    <div class="uk-position-medium uk-position-top-right uk-panel" style="padding:1rem; width: 40px; height: 40px; background-color: rgba(0,0,0,0.8); border-radius: 10px;">
                        <a href='@Url.Action("Delete", "PhotoCollection", new {id = a.Id})' class="uk-position-center" class="uk-icon-link" uk-icon="close"></a>
                    </div>
                </li>
            }
        </ul>

        <a class="uk-position-center-left uk-position-small uk-hidden-hover" href="#" uk-slidenav-previous uk-slider-item="previous"></a>
        <a class="uk-position-center-right uk-position-small uk-hidden-hover" href="#" uk-slidenav-next uk-slider-item="next"></a>

        </div>
        <div style="padding: 1rem;"></div>
    }

    <div class="uk-button-group">
        <a asp-action="Index"><button class="uk-button uk-button-default">Back to List</button></a>
        <div style="padding: 1rem;"></div>
        <input type="submit" value="Save Changes" class="uk-button uk-button-primary" />
    </div>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
